<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Show Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <center><h1>Show User Data</h1></center>
  <table class="table table-bordered text-center shadow">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>User Delete</th>
      <th>User Edit</th>
    </tr>
    <% users.forEach(user => { %>
      <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
      <td><a href="/delete/<%= user.id %>" class="btn btn-danger btn-sm">Delete</a></td>
      <td><a href="/edit/<%= user.id %>" class="btn btn-success btn-sm">Edit</a></td>
      </tr>
      <% }) %>
  </table>
</div>
</body>
</html>